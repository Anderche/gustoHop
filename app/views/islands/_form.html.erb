<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h3>Island details:</h3>
      <%= form_with(model: [ @island ], local: true) do |form| %>
        <div class="form-group">
          <%= form.label :island_name %>
          <%= form.text_field :island_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :island_country %>
          <%= form.text_field :island_country, class: 'form-control' %>
        </div>
        <%= form.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>